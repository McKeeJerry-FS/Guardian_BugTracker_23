@model IEnumerable<Guardian_BugTracker_23.Models.Ticket>

@{
    ViewData["Title"] = "Ticket Index";
}


<div class="content ">
    <div class="d-md-flex justify-content-between">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h1>Ticket Index</h1>
                            </div>
                            <div class="col-md-6">
                                <p class="d-flex justify-content-end align-content-end">
                                    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ticketsTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Updated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArchivedByProject)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketPriority)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeveloperUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubmitterUser)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Archived)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArchivedByProject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketPriority)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project.Name)
                            </td>
                            <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 150px;">@Html.DisplayFor(modelItem => item.Project.Description)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeveloperUser.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubmitterUser.Id)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    @if (item.Archived == true)
                                    {
                                        <a asp-action="Restore" asp-controller="Tickets" asp-route-id="@item.Id">Restore</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Delete" asp-controller="Tickets" asp-route-id="@item.Id">Delete</a>                       
                                    }
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            $('#ticketsTable').DataTable();
        });
    </script>
    <!-- DataTable -->
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="!/gogi/assets/js/examples/datatable.js"></script>
}