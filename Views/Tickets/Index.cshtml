@model IEnumerable<Guardian_BugTracker_23.Models.Ticket>

@{
    ViewData["Title"] = "Ticket Index";
}

<link rel="stylesheet" href="~/gogi/vendors/dataTable/datatables.min.css" type="text/css">

<div class="content ">

    <div class="page-header">
        <div>
            <h3>Datatable</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Tables</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Datatable</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <table id="ticketsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Created)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketStatus)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TicketPriority)
                                        </th>

                                        <th>
                                            Developer
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketPriority)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.DeveloperUser!.FullName)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            $('#ticketsTable').DataTable();
        });
    </script>
    <!-- DataTable -->
    <script src="~/gogi/vendors/dataTable/datatables.min.js"></script>
    <script src="!/gogi/assets/js/examples/datatable.js"></script>
}