@model AssignTicketVM

<div class="container">
    <h2>Assign Developer for</h2>
    <div class="row">
        <div class="col-md-6">
            <h3> @Model.Ticket.Title</h3>
            <a style="font-size:small" asp-action="Details" asp-controller="Tickets" asp-route-id="@Model.Ticket.Id!" name="TicketId">@Model.Ticket.Project!.Name</a>
            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignTicketDeveloper" asp-controller="Tickets">
                        <input type="hidden" asp-for="Ticket!.Id" />
                        <p>Description:  @Model.Ticket.Description</p>
                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>
                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>
</div>
