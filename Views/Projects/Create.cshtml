@model Guardian_BugTracker_23.Models.Project
@using Guardian_BugTracker_23.Services.Interfaces
@inject IBTFileService _fileService

@{
    ViewData["Title"] = "Create";
}
<div>
    <div class="content w-100">
    <div class="d-flex justify-content-between">
        <div class="row">
            <div class="col-md-12">
                <div class="card w-100">
                    <div class="card-header w-100">
                        <h1>Create</h1>

                        <h4>Create a new project</h4>
                    </div>
                    <div class="card-body w-100">

                        <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create" asp-controller="Projects" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
                                <input type="hidden" asp-for="CompanyId" />
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>            
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                @* <div class="form-group">
                                    <label asp-for="Created" class="control-label"></label>
                                    <input asp-for="Created" class="form-control" />
                                    <span asp-validation-for="Created" class="text-danger"></span>
                                </div> *@
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label"></label>
                                    <input asp-for="StartDate" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label"></label>
                                    <input asp-for="EndDate" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProjectPriority" class="control-label"></label>
                                    <select name="ProjectPriority" class="form-control" asp-items="ViewBag.ProjectPriority"></select>
                                    <span asp-validation-for="ProjectPriority" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageFormFile" class="control-label">Blog Post Image</label>
                                    <img class="img-fluid border rounded-3 mb-2 border border-1 border-secondary" style="max-height: 350px;" src="@_fileService.ConvertByteArrayToFile(Model?.ImageFileData!, Model?.ImageFileType!, DefaultImage.ProjectImage)" id="projectImage">
                                    <input asp-for="ImageFormFile" type="file" class="form-control mt-3 pt-2 border border-1 border-secondary" accept=".png,.jpg,.jpeg,.gif"
                                           onchange="document.getElementById('blogImage').src = window.URL.createObjectURL(this.files[0])" />
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Archived" /> @Html.DisplayNameFor(model => model.Archived)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                
                                </div>
                            </form>
                        </div>
                    </div>
                    </div>
                    <div class="card-footer w-100">

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
