@model Guardian_BugTracker_23.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Project Details</h1>

<div>
    <div class="container-fluid">
        <div class="row gy-2">
            <div class="col-md-12 col">
                <div class="row col-cols-2 mt-5">
                    <div class="card col m-1 p-2 border border-2 shadow-sm">
                        <div class="card-header">
                            @* Project Name *@
                            <h5>@Model.Name</h5>
                        </div>
                        <div class="body">
                            @* Project Description *@
                            <p>@Model.Description</p>                           
                        </div>
                    </div>
                    <div class="card col m-1 p-2 border border-2 shadow-sm">
                        <div class="card-header">
                            <h5>Project Status</h5>
                        </div>
                        <div class="body">
                            <ul class=" list-unstyled basic-list">
                                <li>Start Date: <span class="">@Model.StartDate</span></li>
                                <li>Deadline: <span class="">@Model.EndDate</span></li>
                                <li>Priority: <span class="">@Model.ProjectPriority</span></li>
                                @* if() logic *@
                                @if(DateTimeOffset.Now >= Model.StartDate && DateTimeOffset.Now <= Model.EndDate)
                                {
                                    <li>
                                        <h5 class="text-success">Active</h5>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <h5 class="text-danger">Inactive</h5>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="progress-container progress-info m-b-25">
                            <span class="progress-badge" style="font-size:small">Project Status</span>
                            <div class="progress">
                                @* Razor code block *@
                                [Progress Bar code]
                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100;">
                                    @* Use Progress Bar code variable here *@
                                    <span class="progress-value">100%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Manager</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            @* if() logic for Avatar/Default etc *@
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-primary" type="submit">Add Project Manager</button>
                            }
                            else if (User.IsInRole("ProjectManager"))
                            {
                                
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Team</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            @* Logic for avatars *@

                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-primary" type="submit">Add Team Members</button>
                            }
                            else if (User.IsInRole("ProjectManager"))
                            {
                                <button class="btn btn-primary" type="submit">Add Team Members</button>
                            }
                            else
                            {
                                <h5>Project Team</h5>
                            }
                            <ul class="right_chat list-unstyled mb-0">
                                @foreach(var member in Model.Members)
                                {
                                    <li>@member.FullName</li>
                                }                               
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Activity</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;background-color:antiquewhite">
                            @* Project Activity loop *@
                            [Project Activity  e.g. Ticket History]
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-12 col">
                <div class="mt-5 bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="card-header">
                            <h2>Tickets</h2>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="m-2 d-flex align-content-end justify-content-end ">
                                    <label class="m-1">Search</label>
                                    <input type="search"/>
                                </div>
                            </div>
                            <div class="table-responsive" style="overflow-y:auto;height:600px;">
                                <table class="table table-hover">
                                    <thead class="bg-secondary border border-2 border-dark">
                                        <tr>
                                            @* Table header *@
                                            <th>Title</th>
                                            <th>Created</th>
                                            <th>Updated</th>
                                            <th>Archived</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            @* Table body *@
                                            @*foreach statement for each ticket in tickets*@
                                            @foreach (var ticket in @Model.Tickets)
                                            {
                                                <td>@ticket.Title</td>
                                                <td>@ticket.Created</td>
                                                <td>@ticket.Updated</td>
                                                <td>@ticket.Archived</td>
                                                <td>@ticket.TicketType</td>
                                                <td>@ticket.TicketStatus</td>
                                                <td>@ticket.TicketPriority</td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



