@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<!-- logo -->
<div id="logo">
    <img class="text-center" src="~/img/Aurora_navbar.png" alt="image">
</div>
<!-- ./ logo -->


<h5>Sign in</h5>

<!-- form -->
<form id="account" method="post">
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control" placeholder="Username or email" autofocus>
    </div>
    <div class="form-group">
        <input asp-for="Input.Password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group d-flex justify-content-between">
        <div class="custom-control custom-checkbox">
            <input asp-for="Input.RememberMe" class="custom-control-input" checked="" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Remember me</label>
        </div>
        <a asp-page="./ResetPassword">Reset password</a>
    </div>
    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign in</button>
    <hr>
    <hr>
    <p class="text-muted">Don't have an account?</p>
    <a asp-area="Identity" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-light btn-sm">Register now!</a>
</form>
<section>
    <h3>Or use one of the Demo Accounts to log in. </h3>
    <hr />

    <div class="mb-1 text-center">
        <form class="" id="account" method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-12 btn-block">
                        <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 mb-1 text-center" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                        <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 mb-1 text-center" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                        <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 mb-1 text-center" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                        <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 mb-1 text-center" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</section>
<!-- ./ form -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
